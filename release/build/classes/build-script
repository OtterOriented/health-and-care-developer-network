#!/bin/bash -
set -e

readonly ourName="$(basename "$0")"

cd "$(dirname "$0")" 1>/dev/null
readonly crudeOurPath="$(pwd)"
cd - 1>/dev/null

function exitHelp()
{
	echo "Usage: $ourName -h" 1>&2
	echo "Usage: $ourName --help" 1>&2
	echo "Usage: $ourName" 1>&2
	echo "Usage: $ourName <taskName>" 1>&2
	echo "When <taskName> is omitted, the default is to use task 'all'"
	exit $1
}

function exitError()
{
	local -r error="$1"
	echo "$ourName: $error" 1>&2
	exitHelp 1
}

function parseCommandLine()
{
	if [ $# -eq 0 ]; then
		readonly taskName="all"
	elif [ $# -eq 1 ]; then
		if [ "$1" = "--help" ]; then
			exitHelp 2
		elif  [ "$1" = "-h" ]; then
			exitHelp 2
		else
			readonly taskName="$1"
		fi
	else
		exitError "Invalid options"
	fi
}

function changeToSourceControlRoot()
{
	cd "$crudeOurPath" >/dev/null
}

function executeBuildScript()
{
	exec -a build java -server -d64 -Xms1024m -Xmx2048m -jar ../../../library/orogeny/orogeny-with-dependencies.jar --script BuildScript.java --task "$taskName"
}

function main()
{
	parseCommandLine "$@"
	changeToSourceControlRoot
	executeBuildScript
}

main "$@"
