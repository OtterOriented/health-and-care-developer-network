set -e

function turnOffFirewall()
{
	hdn-firewall off
}

function turnOnFirewall()
{
	hdn-firewall on
}

# Some triggers are coalesced; order of triggers matters (ipsets must exist before hand)
function processTriggers()
{
	local -i reloadTables=0
	# Not quoted as iterableTriggers is a space-separated list
	for triggerName in $iterableTriggers
	do
		case "$triggerName" in
			
			"/etc/hdn-firewall/iptables")
				reloadTables=1
			;;

			"/etc/hdn-firewall/ip6tables")
				reloadTables=1
			;;
			
			*)
				echo "Trigger $triggerName not known" 1>&2
			;;
			
		esac
	done

	if [ $reloadTables -eq 1 ]; then
		turnOnFirewall
	fi
}

case "$1" in
	configure)
		readonly postinst_Instance="any"
		readonly mostRecentlyConfiguredVersion="$2"
		
		turnOnFirewall
	;;

	triggered)
		if [ $# -ne 2 ]; then
			echo "Syntax not understood" 1>&2
			exit 1
		fi
		
		processTriggers "$2"
	;;

	abort-upgrade)
		readonly postinst_Instance="old"
		readonly newVersion="$2"
		
		turnOffFirewall
	;;

	abort-remove)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="conflictors"
				readonly package="$3"
				readonly newVersion="$4"
			fi
		else
			readonly postinst_Instance="any"
		fi
		
		turnOffFirewall
	;;

	abort-deconfigure)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="deconfigureds"
				readonly failedInstallPackage="$3"
				readonly version="$4"
			fi
		fi
		# [removing conflicting-package version]
		
		turnOffFirewall
	;;
esac
