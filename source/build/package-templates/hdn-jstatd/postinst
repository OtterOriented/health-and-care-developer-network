set -e

source "/usr/lib/hdn-apt/functions"

function startOrRestartUpstartJobHdnJstatd()
{
	startOrRestartUpstartJob "hdn-jstatd"
}

case "$1" in
	configure)
		readonly postinst_Instance="any"
		readonly mostRecentlyConfiguredVersion="$2"
		
		startOrRestartUpstartJobHdnJstatd
	;;

	abort-upgrade)
		readonly postinst_Instance="old"
		readonly newVersion="$2"
	;;

	abort-remove)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="conflictors"
				readonly package="$3"
				readonly newVersion="$4"
			fi
		else
			readonly postinst_Instance="any"
		fi
	;;

	abort-deconfigure)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="deconfigureds"
				readonly failedInstallPackage="$3"
				readonly version="$4"
			fi
		fi
		# [removing conflicting-package version]
	;;
esac
