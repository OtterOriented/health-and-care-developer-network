# Disable errors stopping the script
set -e

source "/usr/lib/hdn-apt/functions"

function stopServer()
{
	stopUpstartJob "hdn-crds-registry-server"
}

function cleanLogs()
{
	if [ -d /var/log/hdn-crds-registry-server ]; then
		find /var/log/hdn-crds-registry-server -depth -type f -exec rm {} \;
	fi
}

case "$1" in
	remove)
		if [ $# -gt 0 ]; then
			readonly prerm_Instance="conflictors"
			readonly inFavour="$3"
			readonly package="$4"
			readonly newVersion="$5"
		fi
		
		stopServer
		cleanLogs
	;;

	upgrade)
		readonly prerm_Instance="old"
		readonly newVersion="$2"
		
		stopServer
		cleanLogs
	;;

	# This target implies the old prerm script was run with the 'upgrade' target and failed.
	failed-upgrade)
		readonly prerm_Instance="new"
		readonly oldVersion="$2"
	;;

	deconfigure)
		readonly prerm_Instance="deconfigureds"
		readonly inFavour="$2"
		readonly packageBeingInstalled="$3"
		readonly version="$4"
		
		stopServer
		cleanLogs
	;;
esac
