# Disable errors stopping the script
set -e

source "/usr/lib/hdn-apt/functions"

function installWebApps()
{
	divertFile "hdn-services" "/etc" "hosts"

	if [ -e /var/lib/jetty/webapps/itk-samples.war ]; then
		rm -r /var/lib/jetty/webapps/itk-samples.war
	fi
	
	cp /srv/hdn-nginx/hdn-services/content/itk/itk-samples/downloads/itk-samples*.war /var/lib/jetty/webapps/itk-samples.war
	chown --preserve-root jetty:adm /var/lib/jetty/webapps/itk-samples.war
}

function startOrRestartJetty()
{
	set +e
	invoke-rc.d jetty restart
	set -e
}

function startOrRestartNginx()
{
	startOrRestartUpstartJob "hdn-nginx"
}

case "$1" in
	configure)
		readonly postinst_Instance="any"
		readonly mostRecentlyConfiguredVersion="$2"
		
		installWebApps
		startOrRestartJetty
		startOrRestartNginx
	;;

	abort-upgrade)
		readonly postinst_Instance="old"
		readonly newVersion="$2"
	;;

	abort-remove)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="conflictors"
				readonly package="$3"
				readonly newVersion="$4"
			fi
		else
			readonly postinst_Instance="any"
		fi
	;;

	abort-deconfigure)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="deconfigureds"
				readonly failedInstallPackage="$3"
				readonly version="$4"
			fi
		fi
		# [removing conflicting-package version]
	;;
esac
