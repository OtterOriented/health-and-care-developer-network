# Disable errors stopping the script
set -e

source "/usr/lib/hdn-apt/functions"

function stopJetty()
{
	if [ ! -x /usr/sbin/invoke-rc.d ]; then
		return
	fi
	if [ ! -f /etc/init.d/jetty ]; then
		return
	fi
	set +e
	invoke-rc.d jetty stop
	set -e
}

function uninstallWebApps()
{
	if [ -e /var/lib/jetty/webapps/openhealthtools-ihe-bridge ]; then
		rm -r /var/lib/jetty/webapps/openhealthtools-ihe-bridge
	fi
	
	chown --preserve-root --recursive root:root /usr/share/hdn-openhealthtools-ihe-bridge/webapps/openhealthtools-ihe-bridge
	
	rm /usr/share/hdn-openhealthtools-ihe-bridge/webapps/openhealthtools-ihe-bridge/WEB-INF/config.ttl
}

case "$1" in
	remove)
		if [ $# -gt 0 ]; then
			readonly prerm_Instance="conflictors"
			readonly inFavour="$3"
			readonly package="$4"
			readonly newVersion="$5"
		fi
		
		stopJetty
		uninstallWebApps
	;;

	upgrade)
		readonly prerm_Instance="old"
		readonly newVersion="$2"
		
		stopJetty
		uninstallWebApps
	;;

	# This target implies the old prerm script was run with the 'upgrade' target and failed.
	failed-upgrade)
		readonly prerm_Instance="new"
		readonly oldVersion="$2"
	;;

	deconfigure)
		readonly prerm_Instance="deconfigureds"
		readonly inFavour="$2"
		readonly packageBeingInstalled="$3"
		readonly version="$4"
		
		stopJetty
		uninstallWebApps
	;;
esac
