# Disable errors stopping the script
set -e

source "/usr/lib/hdn-apt/functions"

function createHdnDatabaseIfMissing()
{
	# azure instances are 2 CPU, hence 4 segments. Of course, in a sophisticated set-up, we'd have machine profiles...
	if [ ! -f /var/lib/4store/hdn/metadata.nt ]; then
		set +e
		
		/usr/bin/hdn-4store-import
		
		set -e
	fi
}

function cleanUpFolderPermissions()
{
	chown --preserve-root --recursive fourstore:fourstore /var/lib/4store
}

function divert4StoreFiles()
{
	divertFile "hdn-4store" "/etc/default" "4store"
}

function startOrRestart4Store()
{
	set +e
	invoke-rc.d 4store restart
	set -e
}

case "$1" in
	configure)
		readonly postinst_Instance="any"
		readonly mostRecentlyConfiguredVersion="$2"
		
		createHdnDatabaseIfMissing
		cleanUpFolderPermissions
		divert4StoreFiles
		startOrRestart4Store
	;;

	abort-upgrade)
		readonly postinst_Instance="old"
		readonly newVersion="$2"
	;;

	abort-remove)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="conflictors"
				readonly package="$3"
				readonly newVersion="$4"
			fi
		else
			readonly postinst_Instance="any"
		fi
	;;

	abort-deconfigure)
		if [ $# -gt 0 ]; then
			if [ "$2" = "in-favour" ]; then
				readonly postinst_Instance="deconfigureds"
				readonly failedInstallPackage="$3"
				readonly version="$4"
			fi
		fi
		# [removing conflicting-package version]
	;;
esac
