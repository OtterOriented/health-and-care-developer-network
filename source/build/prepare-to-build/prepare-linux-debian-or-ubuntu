set -e

readonly ourName="$(basename "$0")"

cd "$(dirname "$0")" 1>/dev/null
readonly crudeOurPath="$(pwd)"
cd - 1>/dev/null

function exitHelp()
{
	echo "Usage: $ourName [--help]" 1>&2
	exit $1
}

function exitError()
{
	local -r error="$1"
	echo "$ourName: $error" 1>&2
	exitHelp 1
}

function checkRunningOnDebianOrUbuntu()
{
	local -r os="$(uname)"
	if [ "$os" != "Linux" ]; then
		exitError "Only to be used on Linux"
	fi
	if [ ! -f "/etc/debian_version" ]; then
		exitError "Only to be used on Debian or Ubuntu derivatives"
	fi
}

function updateAptRepositories()
{
	sudo -p "Password to update apt: " DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::="--force-confold" --force-yes --no-install-recommends update
	sudo -p "Password to dist-upgrade apt: " DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::="--force-confold" --force-yes --no-install-recommends dist-upgrade
}

function installDependencies()
{
	sudo -p "Password to install build dependencies: " DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::="--force-confold" --force-yes --no-install-recommends install openssh-client git-core lsb-invalid-mta apt-utils build-essential lintian fakeroot gnupg debhelper devscripts dpkg dpkg-dev openjdk-7-jdk openjdk-7-doc openjdk-7-source gzip bzip2
	
	sudo -p "Password to install nginx build dependencies: " DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::="--force-confold" --force-yes --no-install-recommends install autotools-dev libexpat-dev libgd2-noxpm-dev libgeoip-dev liblua5.1-dev libmhash-dev libpam0g-dev libpcre3-dev libperl-dev libssl-dev libxslt1-dev zlib1g-dev libpq-dev
	
	sudo -p "Password to autoremove: " DEBIAN_FRONTEND=noninteractive apt-get -y -o Dpkg::Options::="--force-confold" --force-yes --no-install-recommends autoremove
}

function cloneSource()
{
	mkdir -p ~/Documents

	cd ~/Documents 1>/dev/null 2>/dev/null

	git clone https://github.com/health-and-care-developer-network/health-and-care-developer-network.git

	cd health-and-care-developer-network 1>/dev/null 2>/dev/null
	git checkout development
}

function parseCommandLine()
{
	if [ $# -eq 1 ]; then
		if [ "$1" = "--help" ]; then
			exitHelp 2
		elif  [ "$1" = "-h" ]; then
			exitHelp 2
		else
			exitError "Invalid options"
		fi
	elif [ $# -eq 0 ]; then
		:
	else
		exitError "Invalid options"
	fi
}

function main()
{
	parseCommandLine "$@"
	checkRunningOnDebianOrUbuntu
	updateAptRepositories
	installDependencies
	cloneSource
}

main "$@"
